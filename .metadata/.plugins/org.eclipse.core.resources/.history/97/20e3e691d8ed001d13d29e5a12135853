package principal;

import java.util.Scanner;

public class SalarioFunc {

	public static void main(String[] args) {

	
		Scanner sc = new Scanner(System.in);

		System.out.println("Digite o salário do vendedor");
		double salarioB = sc.nextDouble();

		System.out.println("Digite a quantidade total de vendas no mês: ");
		double vendas = sc.nextDouble();

		double salarioBruto = calcSalarioBruto(salarioB, vendas);

		double descINSS = descINSS(salarioBruto);

		double descIRPF = descIRPF(salarioBruto);

		double salarioBruto = calcBonus(salarioBruto, vendas);

		double salarioLiq = calcSalarioLiq(salarioBruto, descINSS, descIRPF);

		imprimirCC(salarioBase, vendas, salarioBruto, descINSS, descIRPF, salarioLiq);

	}

	static double calcSalarioBruto(double salarioB, double vendas) {
		return salarioB + vendas;
	}

	static double descINSS (double salarioB) {
		return salarioB * 0.5;
	}

	static double descIRPF(double salarioB) {
		return salarioB * 0.11;
	}

	static double calcBonus(double salarioBruto, double vendas) {
			if (vendas > 20000) {
				return salarioBruto *1.05;
		}	else if (vendas >= 15000 && vendas <= 20000) {
				return salarioBruto * 1.03;
		}	else if (vendas >= 10000 && vendas <=15000) {
				return salarioBruto * 1.01;
		}	else {
			System.out.println("Continue se esforçando para melhorar cada vez mais seu retorno financeiro!");
				return salarioBruto;
		}
				
		}

	static double calcSalarioLiq(double salarioBruto, double descINSS, descIRPF) {
				return salarioBruto - descINSS - descIRPF;
		}
		
}
	
