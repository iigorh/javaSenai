package principal;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		/*
		// declaração de constante
		final double PI = 3.14151617;
		// PI = 5.13324; não é possível alterar o valor

		System.out.println(Math.pow(3, 3)); // para resolver potência (primeiro dado elevado ao segundo)
		System.out.println(Math.max(5, 10)); // o maior número entre 2 informados
		System.out.println(Math.min(1, 5)); // o mínimo entre 2 informados
		System.out.println(Math.sqrt(16)); // raiz quadrada
		System.out.println(Math.round(25.9569)); //arredonda o número
		System.out.println(2 * Math.PI); // 
		*/
		//para usar o ponto no lugar virgula
		// quando for entrar com o dado
		//precisa importar a classe (ctrl+shift+o)
		
		Locale ponto = new Locale ("en", "us");
		Scanner sc = new Scanner(System.in);
		System.out.println("Entre com o salario: ");
		double salario = sc.useLocale(ponto) .nextDouble();
		
		System.out.println(salario);
		sc.close();
	}

}
